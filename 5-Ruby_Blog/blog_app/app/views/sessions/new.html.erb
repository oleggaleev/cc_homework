<h1>Sign In</h1>

<%= form_for :session, url: session_path do %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= link_to "(forgot password)", new_password_reset_path %>
  </div>
  <div>
    <%= submit_tag "Log In" %>
  </div>
<% end %>
