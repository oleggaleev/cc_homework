<div class="container">
  <h1>Change Password</h1>

  <p><%= @user.errors.full_messages.join(', ') %></p>

  <%= form_for @user, url: update_password_user_path(@user) do |f| %>
  <div class="form-group row">
    <div class="col-12">
      <%= f.label :current_password, {class: "col-form-label"}%>
      <%= f.password_field :current_password, {class:"form-control"} %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12">
      <%= f.label :password, {class: "col-form-label"}%>
      <%= f.password_field :password, {class:"form-control"} %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12">
      <%= f.label :password_confirmation, {class: "col-form-label"}%>
      <%= f.password_field :password_confirmation, {class:"form-control"} %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12">
      <%= f.submit 'Submit', {class:"btn btn-secondary"} %>
    </div>
  </div>
  <% end %>
</div>
